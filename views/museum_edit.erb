<h3>Update <%= @museum.name() %></h3>

<form action="/museum/<%= @museum.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="updated_name">Rename<%= @museum.name %></label>
  <input name="updated_name" type="text">
  <button typ="submit">Update Museum</button>
</form>

<form action="/museum/<%=@museum.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button typ="submit">Delete Museum</button>
</form>